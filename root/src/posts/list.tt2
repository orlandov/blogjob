[% USE date %]
<div class="posts">
[% FOR post=posts %]
<div class="post">
    <h1 class="title">[% post.title %]</h1>
    <div class="below-title">
        Posted by <a href="#" class="username">[% post.author %]</a> at
        <span class="date">[% date.format(post.created) %]</span>
    </div>
    <div class="content">[% post.html || post.markdown %]</div>
</div>
[% END %]
</div>
