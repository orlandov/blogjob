[% USE date %]
<div class="posts">
[% FOR post=posts %]
<div class="post">
    <h2 class="bottom">[% post.title %]</h2>
    <div class="quiet">Posted by <a href="#" class="username">[% post.author %]</a> at <span class="date">[% date.format(post.created) %]</span></div>
    <div class="content">[% post.html || post.markdown %]</div>
</div>
[% END %]
</div>
